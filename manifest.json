{
  "manifest_version": 3,
  "name": "Email Extractor",
  "version": "1.0",
  "description": "Extract and copy all email addresses from the current page.",
  "permissions": ["scripting", "activeTab", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
